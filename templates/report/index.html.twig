
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <form action="" method="post">
        <label>Od: </label>
        <input type="text" name="from" value="{{ from }}" aria-label="Podaj timestamp">
        <br />

        <label>Do: </label>
        <input type="text" name="to" value="{{ to }}" aria-label="Podaj timestamp">
        <br />

        <label>Lokal: </label>
        <input type="text" name="place" value="{{ place }}" aria-label="Podaj pełną nazwę miasta">
        <br />

        <input type="submit" value="Zatwierdź">
    </form>
    <table border="1">
        <th>
            <td>Nazwa</td>
            <td>Data</td>
            <td>Godzina</td>
            <td>Użytkownik</td>
            <td>Lokal</td>
        </th>
        {% for report in reports %}
        <tr>
            <td></td>
            <td>{{report.name}}</td>
            <td>{{report.date|date("Y-m-d")}}</td>
            <td>{{report.date|date("H:i")}}</td>
            <td>{{report.username}}</td>
            <td>{{report.placename}}</td>
        </tr>
        {% endfor %}
    </table>
</div>
